$('.ryu').append('<img src="http://engineering.armstrong.edu/chrisw/csci1150/ryu.png" />')
$('.guile').append('<img src="http://vignette4.wikia.nocookie.net/streetfighter/images/5/5c/Guile-oldstance.gif/revision/latest?cb=20080209192854" height="192" width="106"/> ')
$('.ryu img').hover(function() {
  this.src = 'http://engineering.armstrong.edu/chrisw/csci1150/ryu_bounce.gif'
}, function() {
  this.src = 'http://engineering.armstrong.edu/chrisw/csci1150/ryu.png'
})
$('.ryu img').mousedown(function() {
  this.src = 'http://engineering.armstrong.edu/chrisw/csci1150/ryuhad.png'
})
$('.ryu img').mouseup(function() {
  this.src = 'http://engineering.armstrong.edu/chrisw/csci1150/ryu.png'
})
$('.ryu img').mousedown(function() {
  $('.ryu').append(
    '<img class="hadouken" src="http://engineering.armstrong.edu/chrisw/csci1150/hadouken.gif">'
  );
})
$('.ryu img').mousedown(function() {
  $('.hadouken').animate({
    "margin-left": "450px"
  }, 0900, 'swing', function() {
    this.remove();
    $('.kosign').append('<img src="http://www.slateman.net/images/gaming/gifs/mvc-ko.gif" />');
    })
  })

$('.kosign').dblclick(function() {
  this.remove();
})